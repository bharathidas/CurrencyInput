<?xml version="1.0" encoding="utf-8"?>
<widget id="mendix.currencyinput.CurrencyInput" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
        supportedPlatform="Web"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Currency Input</name>
    <description>My widget description</description>
    <icon>
        
    </icon>
    <properties>
        <propertyGroup caption="General">
            <property key="valueKey" type="attribute" required="false">
                <caption>Value</caption>
                <description>Programmatically set the value</description>
                <attributeTypes>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>
            <property key="defaultValueKey" type="attribute" required="false">
                <caption>defaultValue</caption>
                <description>Default value</description>
                <attributeTypes>
                    <attributeType name="String"/>
                    <attributeType name="Integer"/>
                    <attributeType name="Decimal"/>
                    <attributeType name="Long"/>
                </attributeTypes>
            </property>
            <property key="allowDecimalsKey" type="attribute" required="false">
                <caption>allowDecimals</caption>
                <description>Allow decimals.Default is true.</description>
                <attributeTypes>
                    <attributeType name="Boolean"/>                    
                </attributeTypes>
            </property>
            <property key="allowNegativeValueKey" type="attribute" required="false">
                <caption>allowNegativeValue</caption>
                <description>Allow user to enter negative value.Default is true.</description>
                <attributeTypes>
                    <attributeType name="Boolean"/>                    
                </attributeTypes>
            </property>
            <property key="placeholderKey" type="attribute" required="false">
                <caption>placeholder</caption>
                <description>Placeholder if no value</description>
                <attributeTypes>
                    <attributeType name="String"/>                    
                </attributeTypes>
            </property>
            <property key="decimalsLimitKey" type="attribute" required="false">
                <caption>decimalsLimit</caption>
                <description>Limit length of decimals allowed.Default is 2</description>
                <attributeTypes>
                    <attributeType name="Integer"/>                    
                </attributeTypes>
            </property>
            <property key="decimalScaleKey" type="attribute" required="false">
                <caption>decimalScale</caption>
                <description>Specify decimal scale for padding/trimming eg. 1.5 - 1.50 or 1.234 - 1.23 if decimal scale 2</description>
                <attributeTypes>
                    <attributeType name="Integer"/>                    
                </attributeTypes>
            </property>
             <property key="fixedDecimalLengthKey" type="attribute" required="false">
                <caption>fixedDecimalLength</caption>
                <description>Value will always have the specified length of decimals</description>
                <attributeTypes>
                    <attributeType name="Integer"/>                    
                </attributeTypes>
            </property>
            <property key="prefixKey" type="attribute" required="false">
                <caption>prefix</caption>
                <description>Include a prefix eg. £ or $</description>
                <attributeTypes>
                    <attributeType name="String"/>                    
                </attributeTypes>
            </property>
            <property key="suffixKey" type="attribute" required="false">
                <caption>suffix</caption>
                <description>Include a suffix eg. € or %</description>
                <attributeTypes>
                    <attributeType name="String"/>                    
                </attributeTypes>
            </property>
            <property key="decimalSeparatorKey" type="attribute" required="false">
                <caption>decimalSeparator</caption>
                <description>Separator between integer part and fractional part of value</description>
                <attributeTypes>
                    <attributeType name="String"/>                    
                </attributeTypes>
            </property>
            <property key="groupSeparatorKey" type="attribute" required="false">
                <caption>groupSeparator</caption>
                <description>Separator between thousand, million and billion</description>
                <attributeTypes>
                    <attributeType name="String"/>                    
                </attributeTypes>
            </property>
            <property key="disabledKey" type="attribute" required="false">
                <caption>disabled</caption>
                <description>disabled.Default is false</description>
                <attributeTypes>
                    <attributeType name="Boolean"/>                    
                </attributeTypes>
            </property>
            <property key="disableAbbreviationsKey" type="attribute" required="false">
                <caption>disableAbbreviations</caption>
                <description>Disable abbreviations eg. 1k - 1,000, 2m - 2,000,000.Default is false</description>
                <attributeTypes>
                    <attributeType name="Boolean"/>                    
                </attributeTypes>
            </property>
            <property key="disableGroupSeparatorsKey" type="attribute" required="false">
                <caption>disableGroupSeparators</caption>
                <description>Disable auto adding the group separator between values, eg. 1000 - 1,000.Default is false</description>
                <attributeTypes>
                    <attributeType name="Boolean"/>                    
                </attributeTypes>
            </property>
            <property key="maxLengthKey" type="attribute" required="false">
                <caption>maxLength</caption>
                <description>Maximum characters the user can enter</description>
                <attributeTypes>
                    <attributeType name="Integer"/>                    
                </attributeTypes>
        </property>
         <property key="stepKey" type="attribute" required="false">
                <caption>step</caption>
                <description>Incremental value change on arrow down and arrow up key press</description>
                <attributeTypes>
                    <attributeType name="Integer"/>                    
                </attributeTypes>
        </property>
        </propertyGroup>
    </properties>
</widget>
